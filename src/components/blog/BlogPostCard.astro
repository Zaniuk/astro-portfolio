---
import { IBlogPostCardProps } from "@types";
import BlogPostCardDate from "./BlogPostCardDate.astro";

const { title, metadata, thumbnail, modified_at, slug }  = Astro.props as IBlogPostCardProps;
---
<a href={`/blog/${slug}`}>

  <div class="max-w-sm w-full lg:max-w-full lg:flex dark:text-white my-4 shadow-md ">
    <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style={`background-image: url(${thumbnail})`} title="Woman holding a mug"></div>
    <div class="lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
      <div class="mb-8">
        <div class="text-gray-900 font-bold text-xl mb-2">{title}</div>
        <p class="dark:text-gray text-base">{metadata.description}</p>
      </div>
      <div class="flex items-center">
        <img class="w-10 h-10 rounded-full mr-4" src="/assets/images/ppicture.webp" alt="Avatar of Jonathan Reinink">
      <div class="text-sm">
        <p class="dark:text-gray leading-none">Zaniuk</p>
        <BlogPostCardDate date={modified_at} />
      </div>
    </div>
  </div>
</div>
</a>